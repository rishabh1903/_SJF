#include<stdio.h>
main()
{
    int burst[20],arrival[10],n,i,j,temp,st[10],ft[10],waiting[10],turnaround[10];
    int totwt=0,totta=0;
    printf("Enter the number of process:");
    scanf("%d",&n);
    for(i=0; i<n; i++)
    {
        printf("Enter process name, arrival time& execution time:");
        scanf("%s%d%d",&processname[i],&arrival[i],&burst[i]);
    }
        for(i=0; i<n; i++)
        for(j=0; j<n; j++)
        {
            if(burst[i]<burst[j])
            {
                temp=arrival[i];
                arrival[i]=arrival[j];
                arrival[j]=temp;
                temp=burst[i];
                burst[i]=burst[j];
                burst[j]=temp;
            }
        }
     awt=(float)totwt/n;
    ata=(float)totta/n;
    printf("\nProcessname\tArrival time\tburst time\tWaiting time\tTurnaound time");
    for(i=0; i<n; i++)
    printf("\n%s\t\t%d\t\t%d\t\t%d\t\t%d",processname[i],arrival[i],burst[i],waiting[i],turnaround[i]);
    printf("\nAverage waiting time is:%f",awt);
    printf("\nAverage turnaroundtime is:%f",ata);
